{
  "manifest_version": 2,
  "name": "Quickpin",
  "icons": {
    "48": "icon.png"
  },
  "description": "Allows pinning the current tab using either the extension button and/or a keyboard shortcut",
  "version": "1.0",
  "background": {
    "scripts": [
      "toggle.js"
    ],    
    "persistent": false
  },
  "browser_action": {
    "default_icon": "pin.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+B"
      }
    }
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}