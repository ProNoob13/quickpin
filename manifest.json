{

  "manifest_version": 2,
  
  "name": "Quickpin",
  "author": "ProNoob13",
  "homepage_url": "https://github.com/ProNoob13/quickpin/",
  "description": "Allows pinning of the current tab using a single click on the button and/or a keyboard shortcut.",

  "version": "1.2",
  "icons": {
    "48": "icons/48x48.png"
  },

  "background": {
    "scripts": [
      "quickpin.js"
    ],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "icons/action.png",
    "default_title": "Pin tab"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+B"
      }
    }
  },

  "permissions": [
    "activeTab"
  ],
  "incognito": "split",  
  "offline_enabled": true

}